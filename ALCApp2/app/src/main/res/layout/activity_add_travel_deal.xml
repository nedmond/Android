<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:weightSum="10"
    tools:context=".AddTravelDeal">

    <EditText
        android:id="@+id/travel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        style="@style/MyEditTextStyle"/>

    <EditText
        android:id="@+id/travel_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:lines="2"
        style="@style/MyEditTextStyle"/>

    <EditText
        android:id="@+id/travel_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Price"
        style="@style/MyEditTextStyle"/>


    <Button
        android:id="@+id/btn_image"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="UPLOAD IMAGE"
        android:stateListAnimator="@null"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/travel_image"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@android:color/transparent"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE DEAL"
        android:stateListAnimator="@null"
        android:shadowColor="@android:color/white"
        android:background="@drawable/default_button_background"
        android:textColor="@android:color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"/>





</LinearLayout>