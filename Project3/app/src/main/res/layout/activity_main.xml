<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pitch"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:background="@drawable/epl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_weight="1"
            app:srcCompat="@drawable/toten" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
          android:textColor="@android:color/black"
            android:paddingLeft="8dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@android:color/holo_red_dark"
            android:textSize="35sp"
            android:text="vs" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_weight="1"
            app:srcCompat="@drawable/ars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="24dp"
                android:onClick="incrementGoal"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="24dp"
                android:padding="16dp"
                android:onClick="decrementGoal"
                android:layout_margin="8dp"
                android:layout_height="24dp"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_weight="4"
            android:layout_width="1dp"
            android:layout_marginTop="14dp"
            android:background="@android:color/background_light"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/goal_text_a"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textAllCaps="true"
            android:paddingLeft="8dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:text="0"
            android:textSize="16sp"/>



        <TextView
            android:id="@+id/goal"

android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:layout_width="2dp"
            android:layout_height="wrap_content"

android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="goals"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/goal_text_b"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:text="0"
            android:paddingLeft="8dp"
            android:textSize="16sp"/>


</LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="24dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:onClick="incrementGoalB"
                    android:padding="16dp"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    app:srcCompat="@android:drawable/arrow_up_float" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:onClick="decrementGoalB"
                    android:layout_margin="8dp"
                    android:layout_width="24dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="24dp"
                    app:srcCompat="@android:drawable/arrow_down_float" />
            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cornerButtonA1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:onClick="incrementShots"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/cornerButtonA2"
                android:layout_width="24dp"
                android:padding="16dp"
                android:onClick="decrementShots"
                android:layout_margin="8dp"
                android:layout_height="24dp"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_weight="4"
            android:background="@android:color/background_light"
            android:layout_width="1dp"
            android:layout_marginTop="14dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/shots_text_a"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAllCaps="true"
                android:paddingLeft="8dp"
                android:textColor="@android:color/black"
                android:background="@color/colorPrimary"
                android:text="0"
                android:textSize="16sp"/>



            <TextView
                android:id="@+id/corners"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="shots"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/shots_text_b"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:text="0"
                android:paddingLeft="8dp"
                android:textSize="16sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="24dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cornerButtonB1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="16dp"
                android:onClick="incrementShotsB"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/cornerButtonB2"
                android:onClick="decrementShotsB"
                android:layout_margin="8dp"
                android:layout_width="24dp"
                android:background="@color/colorPrimary"
                android:layout_height="24dp"
                app:srcCompat="@android:drawable/arrow_down_float" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>